@{
    ViewData["Title"] = "Weather App";
    Layout = null; // Use this only if you want to bypass the layout
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
    <div class="app-wrapper">
        <div class="container">
            <div class="search-box">
                <input type="text" placeholder="Enter city name" id="search-input">
                <button id="search-btn">Search</button>
            </div>

            <div class="weather-box">
                <div class="location">
                    <h2 id="city">Loading...</h2>
                    <p id="date"></p>
                </div>

                <div class="current-weather">
                    <div class="weather-info">
                        <h1 id="temperature">--°C</h1>
                        <p id="description"></p>
                    </div>
                    <div class="weather-icon">
                        <img src="https://cdn-icons-png.flaticon.com/512/6974/6974833.png" alt="Weather Icon"
                            id="weather-img">
                    </div>
                </div>

                <div class="weather-details">
                    <div class="detail">
                        <img src="https://cdn-icons-png.flaticon.com/512/7005/7005660.png" alt="Humidity">
                        <div>
                            <p class="humidity">--%</p>
                            <p>Humidity</p>
                        </div>
                    </div>
                    <div class="detail">
                        <img src="https://cdn-icons-png.flaticon.com/512/2011/2011448.png" alt="Wind">
                        <div>
                            <p class="wind">-- km/h</p>
                            <p>Wind Speed</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="forecast-container">
                <h3>5-Day Forecast</h3>
                <div class="forecast">
                    <div class="forecast-day">
                        <p>--</p>
                        <img src="https://cdn-icons-png.flaticon.com/512/6974/6974833.png" alt="Sunny">
                        <p>--°C</p>
                    </div>
                    <div class="forecast-day">
                        <p>--</p>
                        <img src="https://cdn-icons-png.flaticon.com/512/3222/3222800.png" alt="Partly Cloudy">
                        <p>--°C</p>
                    </div>
                    <div class="forecast-day">
                        <p>--</p>
                        <img src="https://cdn-icons-png.flaticon.com/512/3313/3313888.png" alt="Cloudy">
                        <p>--°C</p>
                    </div>
                    <div class="forecast-day">
                        <p>--</p>
                        <img src="https://cdn-icons-png.flaticon.com/512/3351/3351979.png" alt="Rainy">
                        <p>--°C</p>
                    </div>
                    <div class="forecast-day">
                        <p>--</p>
                        <img src="https://cdn-icons-png.flaticon.com/512/3313/3313888.png" alt="Cloudy">
                        <p>--°C</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="history-container">
            <h3>Weather History</h3>
            <div class="history-list" id="history-list">
                <!-- History items will be loaded here -->
            </div>
        </div>
    </div>
    <script src="~/js/script.js"></script>
</body>

</html>
